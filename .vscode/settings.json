{
    "files.autoSave": "onFocusChange",
    "latex-workshop.latex.recipes": [
        {
            "name": "arara ðŸ¦œ",
            "tools": [
                "arara"
            ]
        },
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex",
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "arara",
            "command": "arara",
            "args": [
                "--verbose",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.synctex.afterBuild.enabled": true,
    "todo-tree.highlights.customHighlight": {
        "ATTENTION": {
            "icon": "info",
            "iconColour": "yellow",
            "type": "text",
            "background": "yellow",
            "rulerLane": "disable",
            "hideFromStatusBar": "true",
            "hideFromTree": "true",
        },
        "BUG": {
            "icon": "squirrel",
            "iconColour": "MediumSlateBlue",
            "background": "cyan",
            "type": "text",
            "rulerLane": "disable"
        },
        "FIXME": {
            "icon": "flame",
            "iconColour": "Crimson",
            "background": "red",
            "type": "text",
            "rulerLane": "disable",
        },
        "IDEA": {
            "icon": "pin",
            "iconColour": "DodgerBlue",
            "background": "Teal",
            "rulerLane": "disable",
            "hideFromStatusBar": "true",
            "hideFromTree": "true",
        },
        "NOTE": {
            "icon": "pin",
            "iconColour": "DodgerBlue",
            "background": "#6495ED",
            "type": "text",
            "rulerLane": "disable",
        },
        "OPTIMIZE": {
            "icon": "arrow-up",
            "iconColour": "MediumAquamarine",
            // "background": "silver",
            "rulerLane": "disable",
            "hideFromStatusBar": "true",
        },
        "SEE": {
            "icon": "eye",
            "iconColour": "Teal",
            // "background": "silver",
            "rulerLane": "disable",
            "hideFromStatusBar": "true",
            "hideFromTree": "true",
        },
        "TODO": {
            "icon": "check-circle",
            "iconColour": "Aquamarine",
            "type": "text",
            "background": "#9FE2BF",
            "rulerLane": "disable",
        },
        "WARNING": {
            "icon": "stop",
            "iconColour": "Coral",
            "type": "text",
            "background": "orange",
            "rulerLane": "disable",
        },
    },
    "todo-tree.regex.regex": "((//|#|%|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.general.statusBar": "current file",
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.tree.buttons.groupBySubTag": true,
    "todo-tree.tree.tagsOnly": true,
    "todo-tree.tree.groupedByTag": true,
    "todo-tree.tree.labelFormat": "${filename} - ${after}",
    "todo-tree.tree.tooltipFormat": "${filename}, ${tag} a linea ${line}",
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 20,
}