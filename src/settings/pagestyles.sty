\usepackage{fancyhdr}
\fancyhf{}
\fancyhead[LE]{\textbf{\textsf{\thepage}}\qquad\nouppercase{\leftmark}}
\fancyhead[RO]{\nouppercase{\rightmark}\qquad\textbf{\textsf{\thepage}}}
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}
% \renewcommand{\footrulewidth}{0.4pt}%
% \fancyfoot[C]{Pagina \textbf{\textsf{\thepage}}\ (\theCurrentPage)}
\pagestyle{fancy}

\renewcommand{\chaptermark}[1]{%
	\markboth{\chaptername\ \thechapter:\ #1}{}%
}

\renewcommand{\sectionmark}[1]{%
	\markright{\thesection\ #1}%
}

% NOTE it redefines the plain page style ISSUED BY CHAPTER
\fancypagestyle{plain}{%
	\fancyhf{}%
	\renewcommand{\headrulewidth}{0pt}%
	\renewcommand{\footrulewidth}{0pt}%
	% \renewcommand{\footrulewidth}{0.4pt}%
