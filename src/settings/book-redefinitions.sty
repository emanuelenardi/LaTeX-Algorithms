% NOTE evita di spaziare equamente il contenuto su tutta la pagina
\raggedbottom

% NOTE riduce gli spazi sopra e sotto il capitolo
% NOTE https://latex.org/forum/viewtopic.php?t=31465
\makeatletter
	\patchcmd{\@makechapterhead}{\vspace*{50\p@}}{}{}{}% Removes space above \chapter head
	\patchcmd{\@makeschapterhead}{\vspace*{50\p@}}{}{}{}% Removes space above \chapter* head
	\patchcmd{\@makechapterhead}{\vskip 40\p@}{\bigbreak}{}{}% Removes space below \chapter head
	\patchcmd{\@makeschapterhead}{\vskip 40\p@}{\bigbreak}{}{}% Removes space below \chapter* head
\makeatother

% NOTE riduce lo spazio sopra un 'paragraph'
% NOTE codice estratto dalle classi standard
% NOTE https://tex.stackexchange.com/questions/4891/how-do-i-control-the-spacing-above-a-new-paragraph
\makeatletter
\renewcommand\paragraph{\@startsection{paragraph}{4}{\z@}%
                                    {1ex \@plus1ex \@minus.3ex}% plus: 3.25ex -> 1ex, minus: 2ex ->3ex
                                    {-1em}%
                                    {\normalfont\normalsize\bfseries}}
\renewcommand\subparagraph{\@startsection{subparagraph}{5}{\parindent}%
                                       {1ex \@plus1ex \@minus .3ex}% plus: 3.25ex -> 1ex, minus: 2ex ->3ex
                                       {-1em}%
                                      {\normalfont\normalsize\bfseries}}
\makeatother
